<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.dtu.tanktrouble.app.controller.EndScreenController">
   <children>
      <SplitPane dividerPositions="0.65" prefHeight="160.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <items>
            <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" minWidth="-Infinity" prefWidth="350.0" spacing="10.0">
               <children>
                  <Label text="Scoreboard">
                     <font>
                        <Font size="41.0" />
                     </font></Label>
                  <ListView fx:id="playersList" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
                     <children>
                        <Button fx:id="exitToMain" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #9e6dd6;" text="Exit to Menu" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Button>
                        <Button fx:id="goToLobby" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #9e6dd6;" text="Start new lobby" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox minWidth="200.0">
               <children>
                  <TextArea fx:id="chatTextArea" maxHeight="1.7976931348623157E308" prefHeight="10000.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0" VBox.vgrow="NEVER">
                     <children>
                        <TextField fx:id="chatMessageTextField" onAction="#onSendClick" HBox.hgrow="ALWAYS" />
                        <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#onSendClick" prefWidth="75.0" text="Send" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
        </items>
      </SplitPane>
   </children>
</VBox>
