<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="620.0" prefWidth="820.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.dtu.tanktrouble.app.controller.GameController">
   <SplitPane dividerPositions="0.3" focusTraversable="false" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
     <items>
         <VBox maxHeight="1.7976931348623157E308" maxWidth="350.0" minWidth="200.0" spacing="20.0">
            <children>
               <Label fx:id="playersTitle" alignment="CENTER" focusTraversable="false" minWidth="60.0" prefWidth="-1.0" style="&#10;" text="Players" textAlignment="CENTER" wrapText="false">
                  <font>
                     <Font name="System Bold" size="18.0" fx:id="x1" />
                  </font>
               </Label>
               <ListView fx:id="playersList" focusTraversable="false" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
               <Label alignment="CENTER" focusTraversable="false" style="&#10;" text="Chat" textAlignment="CENTER" wrapText="false">
                  <font>
                     <Font name="System Bold" size="18.0" fx:id="x11" />
                  </font>
               </Label>
               <TextArea fx:id="chatTextArea" editable="false" focusTraversable="false" maxHeight="1.7976931348623157E308" minHeight="-Infinity" onKeyPressed="#onKeyPressed" onKeyReleased="#onKeyReleased" prefHeight="150.0" wrapText="true" VBox.vgrow="ALWAYS" />
               <HBox spacing="5.0">
                  <children>
                     <TextField fx:id="chatMessageTextField" focusTraversable="false" maxWidth="1.7976931348623157E308" onAction="#onSendClick" HBox.hgrow="ALWAYS" />
                     <Button focusTraversable="false" minWidth="-Infinity" mnemonicParsing="false" onAction="#onSendClick" prefWidth="75.0" text="Send" />
                  </children>
               </HBox>
            </children>
            <padding>
               <Insets bottom="30.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </VBox>
         <StackPane fx:id="stackPane" focusTraversable="true" onKeyPressed="#onKeyPressed" onKeyReleased="#onKeyReleased">
            <children>
                <AnchorPane fx:id="anchorPane">
    </AnchorPane>
            </children>
         </StackPane>
     </items>
   </SplitPane>
</VBox>
